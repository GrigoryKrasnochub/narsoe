<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/numberInfoActivityGeneralInfoWrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:animateLayoutChanges="true"
    android:background="@color/cardview_shadow_start_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numberInfoActivityGeneralInfoTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="10"
            android:gravity="start"
            android:text="@string/number_info_activity_general"
            android:textColor="@color/colorTextInfo"
            android:textSize="10pt" />

        <ImageView
            android:id="@+id/numberInfoActivityGeneralTitleImageImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_weight="2"
            app:srcCompat="@android:drawable/arrow_up_float" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/numberInfoActivityGeneralInfoContentWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/numberInfoActivityGeneralInfoTextTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="10"
            android:text="@string/number_info_activity_general_info_description" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/numberInfoActivityGeneralInfoTextRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:elevation="15dp"
            android:focusable="true"
            android:scrollbars="vertical"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>